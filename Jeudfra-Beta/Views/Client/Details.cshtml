@model Jeudfra_Beta.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header id="main-header" class="py2 bg-warning text-white">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1><i class="fa fa-users"></i> @Model.Customer.Name @Model.Customer.Surname</h1>
            </div>
        </div>
    </div>
</header>
@using (Html.BeginForm("Save", "Client"))
{
    <div class="modal-body">

        @*@Html.AntiForgeryToken()*@
        <fieldset class="border col-md-12">
            <legend>Personal Details</legend>
            <div class="form-group">
                @Html.LabelFor(m => m.Customer.Name)
                @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control form-control col-12 mb-3 " })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Customer.Surname)
                @Html.TextBoxFor(m => m.Customer.Surname, new { @class = "form-control form-control col-12 mb-3 " })
            </div>
            @Html.LabelFor(m => m.Customer.NationalIdNumber)
            @Html.TextBoxFor(m => m.Customer.NationalIdNumber, new { @class = "form-control form-control col-12 mb-3 " })
            <div class="form-group">
                @if (Model.Customer.BirthDate.HasValue)
        {
            @Html.LabelFor(m => m.Customer.BirthDate)
            @Html.TextBoxFor(m => m.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control form-control col-12 mb-3 " })
}
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Customer.Gender)
                @Html.DropDownListFor(m => m.Customer.Gender, new List<SelectListItem>
        {
            new SelectListItem {Text = "Male", Value = "Male"},
            new SelectListItem {Text = "Female", Value = "Male"}
            }, "Select Gender", new { @class = "form-control form-control col-12 mb-3 " })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Customer.PolicyId)
                @Html.DropDownListFor(m => m.Customer.PolicyId, new SelectList(Model.Policies, "Id", "Name"), "Select Policy Type", new { @class = "form-control form-control col-12 mb-3 " })
                @Html.ValidationMessageFor(m => m.Customer.PolicyId)
            </div>
            @*@Html.LabelFor(m => m.MembershipTypeId)
        @Html.TextBoxFor(m => m.MembershipTypeId, new { @class = "form-control form-control col-12 mb-3 " })*@
            @*@Html.LabelFor(m => m.MembershipTypeId)*@
            @*@Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "AgeType"), "Select AgeGroup", new { @class = "form-control form-control col-12 mb-3 " })*@

        </fieldset>
        <br />

        <fieldset class="border col-md-12">
            <legend>Address Details</legend>
            <div class="form-group">
                <select id="City" class="form-control form-control-md col-12 mb-3">
                    <option class="active">Select City</option>
                    <option>Upington</option>
                    <option>Kakamas</option>
                    <option>Louisvale</option>
                </select>

                <input placeholder="Suburb" type="text" class="form-control  form-control-md col-12 mb-3 ">
                <input placeholder="Street" type="text" class="form-control  form-control-md col-12 mb-3 ">
                <input placeholder="number" type="text" class="form-control  form-control-md col-12 mb-3 ">
                <input placeholder="AreaCode" type="text" class="form-control  form-control-md col-12 mb-3 ">
            </div>
        </fieldset>
        <br />
        <fieldset class="border col-md-12">
            <legend>Contact Details</legend>
            <div class="form-group">
                <input id="client_cell_input" placeholder="Cellphone" type="text" class="form-control form-control-md col-12 mb-3 ">
                <input id="client_home_tell_input" placeholder="Home Telephone" type="text" class="form-control  form-control-md col-12 mb-3 ">
                <input id="client_work_tell_input" placeholder="Work Telephone" type="text" class="form-control  form-control-md col-12 mb-3 ">
                <input id="client_email_input" placeholder="Email Address" type="text" class="form-control  form-control-md col-12 mb-3 ">
            </div>
        </fieldset>

    </div>
    <div class="modal-footer">
        @Html.HiddenFor(m => m.Customer.Id)
        <button class="btn btn-secondary" data-dismiss="modal">Dismiss</button>
        <button id="btn_client_saves" type="submit" class="btn btn-danger" @*data-dismiss="modal"*@>Update</button>
        @*@Html.ActionLink("Save Changes","Random","Client", new { @class = "btn btn-danger" })*@
    </div>

}






