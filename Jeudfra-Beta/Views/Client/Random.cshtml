@using System.Web.Mvc.Html
@model IEnumerable<Jeudfra_Beta.Models.Client>


@{
    ViewBag.Title = "Client Page";
}
<header id="main-header" class="py2 bg-warning text-white">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1><i class="fa fa-users"></i> Clients</h1>
            </div>
        </div>
    </div>
</header>
<br />

<!-- Clients -->
<section id="Clients">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card">


                    <div class="card-header">
                        <h4>Customer Details</h4>
                    </div>

                    <table id="customers" class="table">

                        <thead class="thead-dark text-center ">
                            <tr>
                                @*<th>#</th>*@
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Gender</th>
                                <th>Birthdate</th>
                                <th>Id Number</th>
                                <th>City</th>
                                @*<th>Area Code</th>
                                <th>Policy</th>*@
                                <th></th>
                                <th></th>


                            </tr>
                        </thead>

                        <tbody class="text-center">

                            @foreach (var customer in Model)
                            {
                            <tr>
                                @*<td scope="row">@customer.Id</td>*@
                                <td>@customer.Name</td>
                                <td>@customer.Surname</td>
                                <td>@customer.Gender</td>
                                <td>@customer.BirthDate</td>
                                <td>@customer.NationalIdNumber</td>
                                <td>@customer.City</td>
                                @*<td>@customer.AreaCode</td>
                                <td>@customer.Policy.Name</td>*@
                                @*<td>@customer.MaritalStatus</td>*@
                                @*<td>@customer.MembershipType.AgeType</td>*@
                                <td>
                                    @Html.ActionLink("Details", "Details", "Client", new { id = customer.Id }, new { @class = "btn btn-success" })

                                </td>
                                <td>
                                    <button data-customer-id="@customer.Id" class="btn btn-danger js-delete">Delete</button>

                                </td>
                            </tr>
                            }
                        </tbody>

                    </table>
                   
                </div>
            </div>
        </div>
    </div>
</section>

@section  scripts{
    <script>
        $(document).ready(function () {
            $("#customers").DataTable();
           
            $("#customers").on("click",".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>
}



