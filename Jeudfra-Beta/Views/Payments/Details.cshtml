@model Jeudfra_Beta.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header id="main-header" class="py2 bg-warning text-white">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1><i class="fa fa-users"></i>Customer</h1>
            </div>
        </div>
    </div>
</header>
@using (Html.BeginForm("Save", "Client"))
{
    <div class="modal-body">

        @*@Html.AntiForgeryToken()*@
        <fieldset class="border col-md-12">
            <legend>Personal Details</legend>
            <div class="form-group">
                @Html.LabelFor(m => m.Payment.Customer.Name)
                @Html.TextBoxFor(m => m.Payment.Customer.Name, new { @class = "form-control form-control col-12 mb-3 " })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Payment.Customer.Surname)
                @Html.TextBoxFor(m => m.Payment.Customer.Surname, new { @class = "form-control form-control col-12 mb-3 " })
            </div>
           
            @*<div class="form-group">
                @Html.LabelFor(m => m.Customer.PolicyId)
                @Html.DropDownListFor(m => m.Customer.PolicyId, new SelectList(Model.Policies, "Id", "Name"), "Select Policy Type", new { @class = "form-control form-control col-12 mb-3 " })

            </div>*@

        </fieldset>
        <br />

        <fieldset class="border col-md-12">
            <legend>Address Details</legend>
            <div class="form-group">
                @Html.LabelFor(m => m.Payment.Customer.City)
                @Html.DropDownListFor(m => m.Payment.Customer.City, new List<SelectListItem>
{
    new SelectListItem {Text = "Upington", Value = "Upington"},
    new SelectListItem {Text = "Kakamas", Value = "Kakamas"},
     new SelectListItem {Text = "Louisvale", Value = "Louisvale"}
}, "Select City", new { @class = "form-control form-control col-12 mb-3 " })

            </div>
            
        </fieldset>
        <br />
       
    </div>
    @Html.HiddenFor(m => m.Payment.Id)
    <div class="modal-footer">

        <button class="btn btn-secondary" data-dismiss="modal">Dismiss</button>
        <button id="btn_client_saves" type="submit" class="btn btn-danger" @*data-dismiss="modal"*@>Update</button>
        @*@Html.ActionLink("Save Changes","Random","Client", new { @class = "btn btn-danger" })*@
    </div>

}






